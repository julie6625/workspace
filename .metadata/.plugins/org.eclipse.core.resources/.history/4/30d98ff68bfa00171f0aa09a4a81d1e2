package edu.fju.exam;
import java.util.*;
public class VendingMachine {

	public static void main(String[] args) {
		int money = 0;
		System.out.println("目前金額:"+money);
		System.out.println("請輸入投幣金額:");
		Scanner scanner = new Scanner(System.in);
		
//		while(true){
