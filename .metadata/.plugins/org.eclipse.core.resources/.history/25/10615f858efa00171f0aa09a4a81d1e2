package edu.fju.exam;
import java.util.*;
public class VendingMachine {

	public static void main(String[] args) {
		int money = 0;
		Scanner scanner = new Scanner(System.in);
		
		while(true){
			
			System.out.println("販賣機餘額:"+money);
			System.out.println("請投幣或選擇飲料,或輸入0結束:");
			int sc1 = scanner.nextInt();
		
			
			switch(sc1){
		
			case 1:
				money++;
				break;
			case 5:
				money += 5;
				break;
			case 10:
				money += 10;
				break;
			case 0:
				break;
			default:
				System.out.println("coin does not exsist");
				break;
			}
			if(sc1 == 0){
				System.out.println("Bye");
				break;
			}
			
		}
		
//		System.out.println("請輸入預購買商品:");
//		String sc2 = scanner.nextLine();
//		
//		if(sc2 == "a"){
//			money -= 10;
//		}else if(sc2 == "b"){
//			money -= 15;
//		}else if(sc2 == "c"){
//			money -= 10;
//		}else if(sc2 == "d"){
//			money -= 18;
//		}else if(sc2 == "e"){
//			money -= 10;
//		}else if(sc2 == "f"){
//			money -= 20;
//		}else if(sc2 == "g"){
//			money -= 15;
//		}else if(sc2 == "h"){
//			money -= 18;
//		}
//		
//			
	}
	
}
